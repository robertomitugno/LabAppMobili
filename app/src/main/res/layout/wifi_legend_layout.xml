<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:id="@+id/legendLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_margin="16dp"
    android:orientation="vertical">

        <!-- Colore 1: Rosso -->
        <View
            android:id="@+id/view"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="@drawable/gradient_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Colore 2: Arancione -->

        <TextView
            android:id="@+id/valueRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="50 Mb/s"
            android:textColor="@color/black"
            android:textSize="8dp"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="@drawable/gradient_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />


        <TextView
            android:id="@+id/valueYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="30 Mb/s"
            android:textColor="@color/black"
            android:textSize="8dp"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/valueRed" />

        <View
            android:id="@+id/view3"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="@drawable/gradient_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />


        <TextView
            android:id="@+id/valueNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="8dp"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/valueYellow" />


</androidx.constraintlayout.widget.ConstraintLayout>